{
  "manifest_version": 3,
  "name": "Kurdish Subtitles",
  "version": "0.11.2",
  "description": "A browser extension translates video subtitles from other languges into Kurdish and more",
  "homepage_url": "https://github.com/BDXBB/kurdish-subtitles",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage",
    "notifications"
  ],
  "icons": {
  "128": "src/icons/128.png"
},
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.frontendmasters.com/courses/*", "https://www.youtube.com/watch*", "https://www.udemy.com/*"],
      "js": ["src/content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/injector.js"],
      "matches": ["https://frontendmasters.com/*", "https://www.youtube.com/*" ]
    }
  ]
}