{
  "manifest_version": 3,
  "name": "Kurdish Subtitles",
  "version": "0.5",
  "description": "A browser extension translates video subtitles from other languges into Kurdish and more",
  "homepage_url": "https://github.com/BDXBB/kurdish-subtitles",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage" 
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.frontendmasters.com/courses/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["injector.js"],
      "matches": ["https://frontendmasters.com/*"]
    }
  ]
}